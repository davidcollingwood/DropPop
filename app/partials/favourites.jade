ion-view(title='Favourites')
    ion-nav-buttons(side='left')
        button.button.button-icon.ion-navicon(ng-click='toggleMenu()')
    ion-nav-buttons(side='right')
        button.button.button-icon.ion-ios7-search
    
    ion-content
        ion-list
            ion-item.item-icon-right(ng-repeat='article in favourites', ui-sref='app.article')
                h2 {{ article.title }}
                p {{ article.author }}
                i.icon.ion-ios7-arrow-right